<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.marco.demo.ui.SampleRemoteServiceActivity">

    <TextView
        android:id="@+id/action_url_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#8800ff00"
        android:clickable="true"
        android:gravity="center"
        android:text="Action URL 1" />

    <Button
        android:id="@+id/action_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sogou拉活视频APP Activity" />

    <TextView
        android:id="@+id/action_url_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#8800ff00"
        android:clickable="true"
        android:gravity="center"
        android:text="Action URL 2" />

    <Button
        android:id="@+id/action_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拉起搜狐新闻Service" />

    <TextView
        android:id="@+id/action_url_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#8800ff00"
        android:clickable="true"
        android:gravity="center"
        android:text="Action URL 2" />

    <Button
        android:id="@+id/action_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sogou拉活视频APP Service" />

</LinearLayout>
